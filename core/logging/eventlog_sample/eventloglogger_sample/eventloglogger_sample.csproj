<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <RootNamespace>EventLogLoggerSample</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NeoDEEX.Core" Version="5.0.0-alpha.4" />
    <PackageReference Include="NeoDEEX.Extensions" Version="5.0.0-alpha.4" />
  </ItemGroup>

  <ItemGroup>
    <None Update="neodeex.config.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
